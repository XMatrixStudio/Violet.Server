{
  "compilerOptions": {
    /* Base Options */
    "target": "es2019",
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": true,
    /* Addition Options */
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "incremental": true,
    "newLine": "CRLF",
    "removeComments": true,
    "strict": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}